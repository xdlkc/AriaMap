<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

     <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.aria.test.ShowMapActivity">



        <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
        android:id="@+id/map_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/bmapView"
        app:layout_constraintTop_toTopOf="@+id/bmapView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/st_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入起点"
            android:layout_alignBottom="@+id/user"
            android:layout_toRightOf="@+id/user"
            android:layout_toEndOf="@+id/user" />

        <ImageButton
            android:id="@+id/user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/user" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/satellite_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/st_txt"
            android:layout_gravity="top|right"
            android:src="@drawable/satellite"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp"
            app:fabSize="mini"
            app:pressedTranslationZ="8dp"
            app:rippleColor="@color/colorPrimaryDark"
            app:useCompatPadding="false" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/heat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/satellite_btn"
            android:layout_gravity="top|right"
            android:src="@drawable/heat"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp"
            app:fabSize="mini"
            app:pressedTranslationZ="8dp"
            app:rippleColor="@color/colorPrimaryDark"
            app:useCompatPadding="false" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/traffic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/heat_btn"
            android:layout_gravity="top|right"
            android:src="@drawable/traffic"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="4dp"
            app:fabSize="mini"
            app:pressedTranslationZ="8dp"
            app:rippleColor="@color/colorPrimaryDark"
            app:useCompatPadding="false" />

        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/button2"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:text="+" />

        <Button
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/bottomLinearLayout"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:text="-" />

        <LinearLayout
            android:id="@+id/bottomLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="周边" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="导航" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="路线" />
        </LinearLayout>

    </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:headerLayout="@layout/left_head_layout"
        app:menu="@menu/new_menu"

    >
</android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>