<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.aria.test.ShowMapActivity">

        <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
            android:focusable="true" />

        <RelativeLayout
        android:id="@+id/map_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/bmapView"
        app:layout_constraintTop_toTopOf="@+id/bmapView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">


        <!--<android.support.design.widget.TextInputEditText-->
            <!--android:id="@+id/st_txt"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="输入起点"-->
            <!--android:layout_alignBottom="@+id/user_btn"-->
            <!--android:layout_toEndOf="@+id/user_btn"/>-->

            <LinearLayout
                android:id="@+id/input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/user_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/user"
                    android:contentDescription="设置" />

                <AutoCompleteTextView
                    android:id="@+id/endAutoTw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="3"
                    android:hint="输入目标位置"/>

                <!--<MultiAutoCompleteTextView-->
                    <!--android:id="@+id/endMultiAutoTw"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->
                <!--<android.support.design.widget.TextInputEditText-->
                    <!--android:id="@+id/st_txt"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:hint="输入目标位置"-->
                    <!--android:singleLine="true" />-->
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/satellite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/input_layout"
                android:src="@drawable/satellite"
                app:backgroundTint="@color/lightgray"
                app:elevation="4dp"
                app:fabSize="mini"
                app:pressedTranslationZ="8dp"
                app:rippleColor="@color/darkgray"
                app:useCompatPadding="false" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/heat_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/satellite_btn"
                android:src="@drawable/heat"
                app:backgroundTint="@color/lightgray"
                app:rippleColor="@color/darkgray"
                app:elevation="4dp"
                app:fabSize="mini"
                app:pressedTranslationZ="8dp"
                app:useCompatPadding="false" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/traffic_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/heat_btn"
                android:src="@drawable/traffic"
                app:backgroundTint="@color/lightgray"
                app:rippleColor="@color/darkgray"
                app:elevation="4dp"
                app:fabSize="mini"
                app:pressedTranslationZ="8dp"
                app:useCompatPadding="false" />

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_above="@id/minus_btn"
                android:layout_alignParentEnd="true"
                android:background="@color/LT_GRAY"
                android:textSize="30sp"
                android:padding="0dp"
                android:text="+" />

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_above="@id/bottom_layout"
                android:layout_alignParentEnd="true"
                android:background="@color/LT_GRAY"
                android:textSize="30sp"
                android:padding="0dp"
                android:text="-" />

            <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/near_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="周边" />

            <Button
                android:id="@+id/nav_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="导航" />

            <Button
                android:id="@+id/way_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="路线" />
        </LinearLayout>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:headerLayout="@layout/left_head_layout"
        app:menu="@menu/new_menu"

    >
</android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>